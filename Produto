package principal;
import javax.swing.JOptionPane;

public class Produto {

    public String nome;
    
            public String peso;
                    
                    public String preço;
 
    public static void main(String[] args) {
        String  nome; 
             nome =  JOptionPane.showInputDialog("Digite o nome:");
       String peso;
            peso= JOptionPane.showInputDialog("Digite o peso");
       String preço;
            preço= JOptionPane.showInputDialog("Digite o preço");
            
            JOptionPane.showMessageDialog(null, "O nome é: "+ nome);
            JOptionPane.showMessageDialog(null, "O peso é: "+ peso);
        JOptionPane.showMessageDialog(null, "O preço é: "+ preço);
       
    }

    public Produto(String nome, String peso, String preço) {
        this.nome = nome;
        this.peso = peso;
        this.preço = preço;
    }

    public String getNome() {
        return nome;
    }

    public String getPeso() {
        return peso;
    }

    public String getPreço() {
        return preço;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public void setPeso(String peso) {
        this.peso = peso;
    }

    public void setPreço(String preço) {
        this.preço = preço;
    }
    
   
    
}
